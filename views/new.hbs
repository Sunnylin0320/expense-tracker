<div class="container mt-5">
    <h2>請輸入您的支出</h2>
    <small>*必填項目</small>

    <form action="/records" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">名稱*：</label>
        <input name="name" id="name" type="text" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="date" class="form-label">日期*：</label>
        <input name="date" id="date" type="date" class="form-control" placeholder="2023/xx/xx" required>
      </div>
      <div class="mb-3">
        <label for="category" class="form-label">類別*：</label>
        <select class="form-select" name="category" id="category">
          <option selected disabled>請選擇類別</option>
          <option value="家居物業">家居物業</option>
          <option value="交通出行">交通出行</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="其他">其他</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="amount" class="form-label">金額*：</label>
        <input name="amount" id="amount" type="number" min="0" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-primary">送出</button>
    </form>
  </div>
