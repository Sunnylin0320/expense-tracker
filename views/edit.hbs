<div class="container mt-5">
    <h2>請修改支出</h2>
    <form action="/records/{{ record._id }}?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">名稱：</label>
        <input name="name" id="name" type="text" class="form-control" value="{{ record.name }}" required>
      </div>
      <div class="mb-3">
        <label for="date" class="form-label">日期：</label>
        <input name="date" id="date" type="date" class="form-control" placeholder="2023/xx/xx" value="{{ record.date }}" required>
      </div>
      <div class="mb-3">
        <label for="category" class="form-label">類別：</label>
        <select name="category" id="category" class="form-control" required>
          <option selected hidden value='{{record.category}}'>{{record.category}}</option>
          <option value="家居物業">家居物業</option>
          <option value="交通出行">交通出行</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="其他">其他</option>
        </select>
         </div>
      <div class="mb-3">
        <label for="amount" class="form-label">金額：</label>
        <input name="amount" id="amount" type="number" min="0" class="form-control" value="{{ record.amount }}" required>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <a href="/" class="btn btn-primary mr-3" style="color: white">返回</a>
        <button type="submit" class="btn btn-info" style="color: white;">儲存送出</button>
      </div>
    </form>
  </div>
